<div class="modal fade" id="inviteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <main class="w-680">
          <div class="bg-white shadow p-4 rounded-3">
            <div class="fr-auto pt-2 mb-4">
              <h6><%= t("modal.invite_user.title") %></h6>
              <svg width="24" height="24" data-dismiss="modal">
                <use xlink:href="<%= asset_path('svg-sprite.svg') %>#ic-close" />
              </svg>
            </div>

            <%= form_for(:invite_user, url: invite_user_path) do |f| %>
              <div>
                <div class="form-floating mb-3">
                  <%= f.text_field :email, class: "form-control", value: "", placeholder: t("modal.create_room.name_placeholder"), autocomplete: :off, required: true %>
                  <label for="floatingInput">Invite User</label>
                  <div class="invalid-feedback text-left"><%= t("modal.invite_user.not_blank") %></div>
                </div>
              </div>

              <div class="text-center py-4">
                <%= f.submit t("modal.invite_user.send"), class:"btn btn-primary btn-block" %>
              </div>
            <% end %>

            <div class="card-footer">
              <p><%= t("modal.invite_user.footer") %></p>
            </div>
          </div>
        </main>
      </div>
    </div>
  </div>
</div>
