<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render "layouts/g_analytics" %>
    <%= render "layouts/meta_tags" %>
    <%= render "layouts/js_variables" %>

    <%= stylesheet_link_tag 'landing', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('favicon.ico') %>

    <%= render "layouts/js_translations" %>
  </head>

  <body data-controller="<%= params[:controller] %>" data-action="<%= params[:action] %>" data-relative-root="<%= Rails.configuration.relative_url_root || "/" %>">
    <%= render "shared/landing_header" %>
    <%= render 'shared/flash_messages' unless flash.empty? %>
    
    <%= yield %>

    <%= render "shared/landing_footer" %>

    <div id="preloader"></div>

	  <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

    <%= javascript_include_tag 'landing', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
